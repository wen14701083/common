<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_title_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/C_F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="@dimen/dp_200"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="asdasdasdsdasdasdasasdasdasdsdasdasdasasdasdasdsdasdasdasasdasdasdsdasdasdasasdasdasdsdasdasdas"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="start|center_vertical"
                android:padding="@dimen/dp_10"
                android:src="@drawable/icon_back"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="end|center_vertical"
                android:padding="@dimen/dp_10"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="end|center_vertical"
                android:padding="@dimen/dp_10"
                android:textColor="#FF007AFF"
                android:visibility="gone"
                tools:text="保存" />

            <View
                android:id="@+id/view_title_line"
                android:layout_gravity="bottom"
                style="@style/HorizontalLineStyle"/>
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>
</FrameLayout>